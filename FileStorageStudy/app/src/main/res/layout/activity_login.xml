<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context="com.renxifeng.filestoragestudy.LoginActivity">
    <TableRow>
        <TextView android:text="Account" />
        <EditText
            android:id="@+id/login_account"
            android:hint="Please input your account" />
    </TableRow>
    <TableRow>
        <TextView android:text="Account" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/login_password"
            android:hint="Please input your password" />
    </TableRow>
    <TableRow>
        <CheckBox android:id="@+id/remember_password" />
        <TextView android:text="Remember your password"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/login_in_button"
            android:layout_span="2"
            android:text="Login in"
            />
    </TableRow>
</TableLayout>
